<% @post.each do |post| %>
  <div class="main-page">
    <div class="left-page">
      <div class="left-page-calendar">
        <%= link_to "投稿する", new_post_path %>
        <h1>Calendar</h1>
          <p>カレンダー</p>
      </div>
      <div class="left-page-archive">
        <p>月別Archive</p>
        <%= post.created_at %>
      </div>
      <div class="left-page-category">
        <p>Category</p>
        <p>Tag</p>
      </div>
    </div>

    <div class="right-page">
      <div class="right-page-article">
        <p>ArticleCatalog</p>
          <%= post.created_at %>
          <%= image_tag post.image.variant(resize:'600x600') %>
          <%= post.content %>
      </div>
      <div class="right-page-image">
        <p>2020/9/20</p>
        <p>Image</p>
      </div>
      <div class="right-page-content">
        <p>Content</p>
      </div>
    </div>
  </div>
<% end %>
